pipeline {
  agent none
  stages {
        stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'npm install'
      }
            post {
        success {
          echo ' node is good - continue - ok opinion'
        }
      }
    }
        stage ('Build') {
            steps {
                sh 'javac HelloWorld.java'
            }
        }

        stage ('Run') {
            steps {
                sh 'java HelloWorld'
            }
        }
        stage('DB') {
      agent {
        docker { image 'mysql:latest' }
      }
      steps {
        sh 'touch new_txt_file.txt'
      }
    }
  }
}
